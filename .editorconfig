root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sass, scss}]
indent_size = 2
indent_style = tab

[*.{html, js, md}]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.svg]
insert_final_newline = false
